<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.google.sample.cloudvision.MainActivity"
    tools:showIn="@layout/v_activity_main">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">



            <ImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@mipmap/test_vision"/>

            <TextView
                android:id="@+id/image_details"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Hit the button below to click an image"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <ListView
                android:id="@+id/mainListView"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_weight="1.48"></ListView>
        </LinearLayout>
</RelativeLayout>